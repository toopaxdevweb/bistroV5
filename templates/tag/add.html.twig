{% extends 'base.html.twig' %}

{% block title %}Ajouter un Tag{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Ajouter un Tag</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="mb-3">
                {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du Tag'}}) }}
            </div>

            <button class="btn" type="submit" style="background-color: #cf4727; border-color: #cf4727;">Ajouter le Tag</button>
            
        {{ form_end(form) }}
    </div>
{% endblock %}
